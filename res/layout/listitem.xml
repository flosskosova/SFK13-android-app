<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/item_list_click"
   >
	<LinearLayout 
	    android:id="@+id/ll_startTime"
	    android:orientation="vertical"
	     android:layout_width="55dp"
        android:layout_height="100dp"
	    >
	    <TextView
        android:id="@+id/t_v_startTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#D9E2E1"
        android:gravity="center"
        android:textSize="12dp"
        android:padding="10dp"
        android:text="09:00"
        android:textColor="@color/Black"
         />
	    
	</LinearLayout>
    
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/t_v_speaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_v_title"
        android:layout_toRightOf="@+id/ll_startTime"
        android:text="Speaker"
        android:gravity="left"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/t_v_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ll_startTime"
        android:gravity="left"
        android:padding="2dp"
        android:text="Title"
        android:textColor="#006699"
        android:textSize="20dp" />
</RelativeLayout>
